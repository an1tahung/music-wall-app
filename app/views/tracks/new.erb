<h1 class="text-center">Add a song!</h1>

<% if @track.errors.any? %>
<div class="text-center">
    <strong>Uh oh! Please fill out the required fields: </strong>
    <ul class="list-inline">
      <% @track.errors.messages.values.each do|msg| %>
        <% msg.each do |m| %>
         <li>
         <em><%= m %></em>
         </li>
        <% end %>
      <% end %>
    </ul>
</div>
<% end %>
</br>
<form class="text-center" role= "form" method="POST" action="/tracks">
  <div class="form-group"> 
    <label for="author">Artist:</label>
    <input type="text" class"form-control" name="author" value="<%= @track.author %>" placeholder="required">
  </div class="form-group">
  <div class="form-group">
    <label for="song_title">Song Title:</label>
    <input type= "text"  class"form-control" name= "song_title" value="<%= @track.song_title %>" placeholder="required" >
  </div class="form-group">
  <div class="form-group">
    <label for="url">URL: (optional)</label>
    <input type= "url" class"form-control" name= "url" value="<%= @track.url %>" placeholder="optional" >
  </div class="form-group">
  </br>
  <div>
    <input type="submit" class="btn btn-warning" value="Add your song">
  </div>
</form>
</br>
<p class="text-center"><a href="/tracks">Return to the Music Wall</a></p>
 