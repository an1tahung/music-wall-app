<h1>Add a song!</h1>

<% if @message.errors.any? %>
<div>
    <strong>Some issues with your message, please fix them:</strong>
    <ul>
      <% @message.errors.full_messages.each do|message| %>
        <li><%=message %></li>
      <% end %>
    </ul>
</div>
<% end %>

<form method='post' action="/tracks">
  <div> 
    <label>Artist:</label>
    <input type="text" name="author" value="<%= @track.author %>">
  </div>
  <div>
    <label>Song Title:</label>
    <input type= "text" name= "song_title" value="<%= @track.song_title %>">
  </div>
  <div>
    <label>URL: (optional)</label>
    <input type= "url" name= "url" value="<%= @track.url %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>
